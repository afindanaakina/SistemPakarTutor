'use client';

import { useState } from 'react';
import { demoCases } from '../lib/demo-cases';
import { ForwardChainingEngine } from '../lib/forward-chaining-engine';
import { InferenceResult } from '../types/forward-chaining';
import Card from '../components/Card';
import StepVisualization from '../components/StepVisualization';

export default function DemoPage() {
  const [selectedCase, setSelectedCase] = useState(demoCases[0]);
  const [result, setResult] = useState<InferenceResult | null>(null);
  const [isRunning, setIsRunning] = useState(false);

  const runInference = () => {
    setIsRunning(true);
    const engine = new ForwardChainingEngine();
    
    setTimeout(() => {
      const inferenceResult = engine.run(
        selectedCase.initialFacts,
        selectedCase.rules,
        selectedCase.goal
      );
      setResult(inferenceResult);
      setIsRunning(false);
    }, 300);
  };

  const resetDemo = () => {
    setResult(null);
  };

  return (
    <div className="max-w-7xl mx-auto px-4 py-8">
      <h1 className="text-3xl font-bold text-gray-900 mb-8">
        Demo Forward Chaining
      </h1>

      <div className="grid lg:grid-cols-3 gap-8">
        <div className="lg:col-span-1">
          <Card title="Pilih Kasus">
            <div className="space-y-3">
              {demoCases.map((demoCase) => (
                <button
                  key={demoCase.id}
                  onClick={() => {
                    setSelectedCase(demoCase);
                    setResult(null);
                  }}
                  className={`w-full text-left p-4 rounded-lg border-2 transition-all ${
                    selectedCase.id === demoCase.id
                      ? 'border-blue-500 bg-blue-50'
                      : 'border-gray-200 hover:border-gray-300 bg-white'
                  }`}
                >
                  <h3 className="font-semibold text-gray-900 mb-1">
                    {demoCase.title}
                  </h3>
                  <p className="text-sm text-gray-600 mb-2">
                    {demoCase.description}
                  </p>
                  <span className="inline-block px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded">
                    {demoCase.category}
                  </span>
                </button>
              ))}
            </div>
          </Card>
        </div>

        <div className="lg:col-span-2 space-y-6">
          <Card title={selectedCase.title}>
            <div className="space-y-4">
              <div>
                <h4 className="font-semibold text-gray-900 mb-2">Deskripsi:</h4>
                <p className="text-gray-700">{selectedCase.description}</p>
              </div>

              <div>
                <h4 className="font-semibold text-gray-900 mb-2">
                  Fakta Awal ({selectedCase.initialFacts.length}):
                </h4>
                <div className="space-y-2">
                  {selectedCase.initialFacts.map((fact) => (
                    <div
                      key={fact.id}
                      className="bg-green-50 border border-green-200 rounded p-3"
                    >
                      <p className="font-medium text-green-900">{fact.value}</p>
                      {fact.description && (
                        <p className="text-sm text-green-700 mt-1">
                          {fact.description}
                        </p>
                      )}
                    </div>
                  ))}
                </div>
              </div>

              <div>
                <h4 className="font-semibold text-gray-900 mb-2">
                  Aturan ({selectedCase.rules.length}):
                </h4>
                <div className="space-y-2">
                  {selectedCase.rules.map((rule) => (
                    <div
                      key={rule.id}
                      className="bg-blue-50 border border-blue-200 rounded p-3"
                    >
                      <p className="text-sm text-blue-900 font-medium mb-1">
                        {rule.description}
                      </p>
                      <p className="text-xs text-blue-700">
                        IF {rule.conditions.join(' AND ')} THEN{' '}
                        {rule.conclusion}
                      </p>
                    </div>
                  ))}
                </div>
              </div>

              {selectedCase.goal && (
                <div className="bg-yellow-50 border border-yellow-200 rounded p-4">
                  <h4 className="font-semibold text-yellow-900 mb-1">
                    Target Goal:
                  </h4>
                  <p className="text-yellow-800">{selectedCase.goal}</p>
                </div>
              )}

              <div className="flex gap-3 pt-4">
                <button
                  onClick={runInference}
                  disabled={isRunning}
                  className="flex-1 bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 disabled:bg-gray-400 disabled:cursor-not-allowed font-medium transition-colors"
                >
                  {isRunning ? 'Memproses...' : 'Jalankan Inferensi'}
                </button>
                {result && (
                  <button
                    onClick={resetDemo}
                    className="px-6 py-3 border border-gray-300 rounded-lg hover:bg-gray-50 font-medium transition-colors"
                  >
                    Reset
                  </button>
                )}
              </div>
            </div>
          </Card>

          {result && (
            <>
              <Card title="Hasil Inferensi">
                <div className="space-y-4">
                  <div
                    className={`p-4 rounded-lg ${
                      result.goalReached
                        ? 'bg-green-50 border border-green-200'
                        : result.success
                        ? 'bg-blue-50 border border-blue-200'
                        : 'bg-yellow-50 border border-yellow-200'
                    }`}
                  >
                    <p
                      className={`font-semibold mb-2 ${
                        result.goalReached
                          ? 'text-green-900'
                          : result.success
                          ? 'text-blue-900'
                          : 'text-yellow-900'
                      }`}
                    >
                      {result.message}
                    </p>
                    <div className="flex gap-4 text-sm">
                      <span
                        className={
                          result.goalReached
                            ? 'text-green-700'
                            : result.success
                            ? 'text-blue-700'
                            : 'text-yellow-700'
                        }
                      >
                        Langkah: {result.steps.length}
                      </span>
                      <span
                        className={
                          result.goalReached
                            ? 'text-green-700'
                            : result.success
                            ? 'text-blue-700'
                            : 'text-yellow-700'
                        }
                      >
                        Total Fakta: {result.finalFacts.length}
                      </span>
                    </div>
                  </div>

                  <div>
                    <h4 className="font-semibold text-gray-900 mb-3">
                      Fakta Akhir:
                    </h4>
                    <div className="flex flex-wrap gap-2">
                      {result.finalFacts.map((factId, index) => (
                        <span
                          key={index}
                          className="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium bg-gray-100 text-gray-800"
                        >
                          {factId}
                        </span>
                      ))}
                    </div>
                  </div>
                </div>
              </Card>

              <Card title="Langkah-langkah Inferensi">
                <StepVisualization steps={result.steps} />
              </Card>
            </>
          )}
        </div>
      </div>
    </div>
  );
}
